<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4 show-follow">
    <section class="user_info">
      <%= avatar_for @user %>
      <h1 class="aside-name"><%= @user.name %></h1>
      <span class="aside-link text-center"><%= link_to "view my profile", @user %></span>
      <span class="text-center aside-count">Swell Posts: <%= @user.posts.count %></span>
    </section>
    <section class="stats-show-follow mb-4">
      <div class="stats-follow">
        <%= render 'shared/user_stats' %>
      </div>
      
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to image_tag(user.avatar.variant(resize: "60x60")), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3 class="text-center"><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>

