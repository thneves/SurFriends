<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
  <section class="user_info">
    <h1>
      <% if @user.avatar.attached? %>
        <image src="<%=(url_for(@user.avatar.variant(resize: "200x200")))%>">
      <% else %>
        <%= gravatar_for @user %>
      <% end %>
      <%= @user.name %>
    </h1>
  </section>
  <section class="stats">
    <%= render 'shared/stats'%>
  </section>
  </aside>

  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.posts.any? %>
      <h3 class="text-center">Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
       <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>


