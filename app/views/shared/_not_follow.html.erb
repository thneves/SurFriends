<h4 class='text-dark border-bottom pb-3 pt-3 h4-who-follow'>WHO TO FOLLOW</h4>
<div>
  <ul class="not-follow-list">
    <% @users.each do |user| %>
      <% if !current_user.following?(user)%>
        <% if current_user != user %>
          <div class="users-not-following">
            <%=  image_tag(url_for(user.avatar.variant(resize: "30x30"))) %>
            <%= link_to user.name, user %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>