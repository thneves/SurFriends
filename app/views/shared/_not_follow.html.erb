<h4>WHO TO FOLLOW</h4>
<div>
  <ul class="ul-users-not-following">
    <% @users.each do |user| %>
      <% if !current_user.following?(user)%>
        <% if current_user != user %>
          <li class="users-not-following">
            <%=  image_tag(url_for(user.avatar.variant(resize: "70x70"))) %>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>