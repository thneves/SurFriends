<h4 class='text-dark border-bottom pb-3 pt-3'>Surfers you don't follow yet!</h4>
<div>
  <ul class="list-not-following">
    <% @users.each do |user| %>
      <% if !current_user.following?(user)%>
        <% if current_user != user %>
          <div class="users-not-following">
            <%= link_to image_tag(user.avatar.variant(resize:"60x60")), user %>
            <%= link_to user.name, user %>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </ul>
</div>